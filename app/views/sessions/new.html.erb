<script src="assets/validator.js">
    
</script>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="form-body" style="background: rgb(243, 243, 243) none repeat scroll 0% 0%;">
                <%= form_for(:session, url: login_path,data:{toggle:"validator"},:html=> {:id => 'session_login'}) do |f| %>
                   <div class="form-group">
                      <label for="pwd">Email:</label>
                      <input type="email" class="form-control" id="pwd" name="session[email]" data-error="Digite um e-mail válido!" required>
                      <div class="help-block with-errors"></div>
                   </div>
                   <div class="form-group">
                      <label for="pwd">Senha:</label>
                      <input type="password" data-minlength="6" class="form-control" id="inputPassword" placeholder="Password"  name="session[password]" required>
                      <div class="help-block">Minimo 6 caracteres!</div>
                   </div>
                   <button type="submit" class="btn btn-success btn-lg" style="width:100%">Fazer Login</button
                <% end %>
                <a href='/signup' id='register'>não possui cadastro?</a>
                <hr></hr>
                <h4 align="center">Logue também pelo:</h4>
                <div class="col-xs-6 text-left">

                     <input type="button" value="Facebook" onclick="window.location.href='/auth/facebook'" class="btn btn-primary btn-block">
                </div>
                <div class="col-xs-6 text-right">

                     <input type="button" value="Google+" onclick="window.location.href='/auth/google_oauth2'" class="btn btn-danger btn-block">
                </div>
                &nbsp;
            </div>
        </div>
    </div>
</div>